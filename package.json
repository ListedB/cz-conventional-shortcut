{
  "name": "cz-conventional-clubhouse",
  "version": "0.0.0",
  "description": "A commitizen + conventional changelog adapter with clubhouse friendly tips",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "format": "prettier --write --single-quote --trailing-comma es5",
    "format:all": "yarn format index.js README.md",
    "precommit": "lint-staged",
    "commitmsg": "commitlint -e $GIT_PARAMS"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^5.1.3",
    "commitlint": "^5.2.0",
    "commitizen": "^2.9.6",
    "husky": "^0.14.3",
    "lint-staged": "^6.0.0",
    "prettier": "^1.8.2"
  },
  "dependencies": {
    "conventional-commit-types": "^2.2.0",
    "lodash.map": "^4.6.0",
    "longest": "^2.0.1",
    "right-pad": "^1.0.1",
    "word-wrap": "^1.2.3"
  },
  "config": {
    "commitizen": {
      "path": "./index.js"
    }
  },
  "lint-staged": {
    "*.{js,css}": [
      "yarn format",
      "git add"
    ]
  }
}
